@model IEnumerable<CheckOutForm.Models.CurrentStatus>

@{
    ViewData["Title"] = "Current Status";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ApprovalStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ApprovalStatus)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CurrentStatusID">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.CurrentStatusID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
